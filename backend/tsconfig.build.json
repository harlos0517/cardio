{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "incremental": false,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "./dist"
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "*config.*",
    "*spec.*"
  ],
}
